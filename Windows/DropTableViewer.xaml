<Window x:Class="DropTableEditor.Windows.DropTableViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drop Table Editor - ITEM_DROP.STB" Height="600" Width="900" WindowStartupLocation="CenterScreen" 
        ShowActivated="True" Topmost="False">
    <Window.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.0" Color="#aebad1" />
            <GradientStop Offset="1.0" Color="#cdd4df" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Content="Drop Tables" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                <Label Content="Search:" Foreground="Black" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <TextBox x:Name="SearchBox" Width="200" Height="25" Margin="5,0,5,0" VerticalAlignment="Center" 
                         TabIndex="0" AcceptsReturn="False"/>
                <Button Content="Search" Width="80" Height="25" Click="Search_Click" TabIndex="1"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Add Drop Table" Width="120" Height="25" Margin="5,0,0,0" Click="AddDropTable_Click"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="DropTablesPanel">
                <!-- Expanders will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Height="25" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Close" Width="80" Height="25" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
